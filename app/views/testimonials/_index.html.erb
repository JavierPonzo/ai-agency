<!-- ✅ Testimonials Section (Carousel) -->
<section class="testimonials-section text-center bg-light py-5">
  <div class="container">
    <h2 class="mb-4">What Our Clients Say</h2>
    <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% @testimonials.each_with_index do |testimonial, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <div class="testimonial-card p-4 shadow-sm bg-white rounded">
              <p class="text-muted">"<%= testimonial.feedback %>"</p>
              <strong>- <%= testimonial.name %>, <%= testimonial.company %></strong>
              <div class="stars mt-2">
                <% 5.times do %>
                  <i class="fas fa-star text-warning"></i> <!-- ⭐ Star Icon -->
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </button>
    </div>
  </div>
</section>
